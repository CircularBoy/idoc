body
  box: vertical space-between
  min-height: 100vh

section
  padding: 50px 0

.container
  position: relative
  max-width: $container-sm-px
  margin: * auto
  padding: * 14px @md * 3vw @xl * 26px

  &--stretch
    position: relative

  &--min
    padding: 0 @xl * 90px

@media $md
  .container
    max-width: $container-md-px

@media $lg
  .container
    max-width: $container-lg-px

@media $xl
  .container
    max-width: $container-xl-px
